<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Board">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="162dp"
        tools:layout_editor_absoluteY="-48dp">

        <LinearLayout
            android:id="@+id/bottom_navigation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@color/white"
            android:backgroundTint="@color/toolBar_background"
            android:elevation="8dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/Board_ToFinancesAndStocks"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="16dp"
                android:text="@string/Board_ToFinancesAndStocks" />

            <TextView
                android:id="@+id/KontostandTxt"
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/Kontostand"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/Kontostand"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/CurrentPlayerQuestion"
                android:layout_width="7dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/CurrentPlayer"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/CurrentPlayer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="20sp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/FinancesStocks_Board"
            android:layout_width="match_parent"
            android:layout_height="360dp"
            android:contentDescription="@string/Spielbrett"
            app:srcCompat="@android:drawable/presence_audio_online"
            tools:srcCompat="@android:drawable/presence_audio_online" />

        <TextView
            android:id="@+id/FinancesStocks_Messages"
            android:layout_width="match_parent"
            android:layout_height="361dp"
            android:alpha="1"
            android:background="#FFFFFF"
            android:visibility="gone" />


    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>